<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <VideoView
            android:id="@+id/mediVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="-2dp"

            android:layout_marginTop="-1dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="-2dp"
            android:background="#BAFFFFFF"
            android:backgroundTint="#4DD6809C"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" />
    </RelativeLayout>


    <TextView
        android:id="@+id/textview_second"
        android:layout_width="348dp"
        android:layout_height="74dp"
        android:background="#70927397"
        android:backgroundTint="#9E927397"
        android:fontFamily="@font/radiant"
        android:lineSpacingExtra="8sp"
        android:text="@string/medi_label"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#C1B9B9"
        android:textSize="38sp"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@id/linear_MediSongs"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />



<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linear_MediSongs"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textview_second"
    app:layout_constraintStart_toStartOf="parent"

    >

    <Button
        android:id="@+id/button_mediSong1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:backgroundTint="#70927397"
        android:fontFamily="@font/bellaberry"
        android:text="@string/HummingOhm"
        android:textColor="#C1B9B9"
        android:textSize="20sp"
         />
    <Button
        android:id="@+id/button_mediSong2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:backgroundTint="#70927397"
        android:fontFamily="@font/bellaberry"
        android:text="@string/ForestRain"
        android:textColor="#C1B9B9"
        android:textSize="20sp"

        />

    <Button
        android:id="@+id/button_mediSong3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:backgroundTint="#70927397"
        android:fontFamily="@font/bellaberry"
        android:text="@string/MeditationBowls"
        android:textColor="#C1B9B9"
        android:textSize="20sp"
       />
    <Button
        android:id="@+id/button_mediSong4"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:backgroundTint="#70927397"
        android:fontFamily="@font/bellaberry"
        android:text="@string/WindChimes"
        android:textColor="#C1B9B9"
        android:textSize="20sp"
        />
    <Button
        android:id="@+id/button_mediSong5"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:backgroundTint="#70927397"
        android:fontFamily="@font/bellaberry"
        android:text="@string/TibetanSoundBowl"
        android:textColor="#C1B9B9"
        android:textSize="20sp"
        />
    <Button
        android:id="@+id/button_mediSong6"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:backgroundTint="#70927397"
        android:fontFamily="@font/bellaberry"
        android:text="@string/SpiritualJourney"
        android:textColor="#C1B9B9"
        android:textSize="20sp"
        />
    <Button
        android:id="@+id/button_mediSong7"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:backgroundTint="#70927397"
        android:fontFamily="@font/bellaberry"
        android:text="@string/FluteWind"
        android:textColor="#C1B9B9"
        android:textSize="20sp"
        />

</androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>
